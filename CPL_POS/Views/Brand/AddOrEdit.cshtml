@model CPL_POS.ViewModel.BrandViewModel

@{
    ViewData["Title"] = "AddOrEdit";
    Layout = null;
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return JQueryAjaxPost(this);" autocomplete="off" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" class="form-control" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BrandName" class="control-label"></label>
                        <input asp-for="BrandName" class="form-control" />
                        <span asp-validation-for="BrandName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CreatedOn" class="control-label"></label>
                        <input asp-for="CreatedOn" class="form-control" />
                        <span asp-validation-for="CreatedOn" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <div class="form-group">
                <label asp-for="BrandPicture" class="form-label mb-3"></label>

                <img src="~/Uploads/no image.png" style="height:90px!important; width:auto!important;" class="form-control change_edit mb-3" asp-append-version="true" />

                <input asp-for="BrandPicture" class="form-control changeImage" type="file" />
            </div>




            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ModifiedBy" class="control-label"></label>
                        <input asp-for="ModifiedBy" class="form-control" />
                        <span asp-validation-for="ModifiedBy" class="text-danger"></span>
                    </div>
                </div>
            </div>




            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>




@section Scripts {
    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

     <script>
        $(function() {

            $('.changeImage').change(function() {
                debugger;
                var input = this;
                if (input.files) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('.change_edit').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            })
        })
    </script>


   
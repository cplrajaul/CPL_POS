@model IEnumerable<CPL_POS.Models.Customer>

<table class="table table-bordered table-striped table-active">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedBy)
            </th>
            <th>
                <a onclick="ShowInPopup('@Url.Action("AddOrEdit","Customer",null,Context.Request.Scheme)', ' New Customer ')" class="btn btn-success text-white">Create New Customer</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedBy)
                </td>
                <td>

                    <a onclick="ShowInPopup('@Url.Action("AddOrEdit","Customer",new { id=item.CustomerId},Context.Request.Scheme)', 'Update Customer')" class="btn btn-info">Edit</a>

                    <form asp-action="Delete" asp-route-id="@item.CustomerId" onsubmit="return JQueryAjaxDelete(this)" class="d-inline">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>


                </td>
            </tr>
        }
    </tbody>
</table>

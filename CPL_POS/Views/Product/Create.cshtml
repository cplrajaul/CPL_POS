@model CPL_POS.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Create";
}


@{
    ViewData["Title"] = "Create";
}
<div class="card col-md-8 mx-auto">
    <div class="card-header">
        <h3 class="text-uppercase">new product</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create"  class="btn btn-light col-md-12 mx-auto " enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProductPicture" class="form-label mb-3"></label>

                        <img src="~/Uploads/no image.png" style="height:90px!important; width:auto!important;" class="form-control change_edit mb-3" asp-append-version="true" />
                     
                        <input asp-for="ProductPicture" class="form-control changeImage" type="file" />
                    </div>
                </div>


            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>
           

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CreatedOn" class="control-label"></label>
                        <input asp-for="CreatedOn" class="form-control" />
                        <span asp-validation-for="CreatedOn" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ModifiedBy" class="control-label"></label>
                        <input asp-for="ModifiedBy" class="form-control" />
                        <span asp-validation-for="ModifiedBy" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubCategoryName" class="control-label"></label>
                        <select asp-for="SubCategoryId" class="form-control" asp-items="ViewBag.SubCategoryId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="BrandName" class="control-label"></label>
                        <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-sm btn-primary rounded-0" />
                    <a asp-action="Index" class="btn btn-sm btn-primary rounded-0">Back to List</a>
                </div>

            </div>
        </form>
    </div>

</div>





@section Scripts {

    <script>
        $(function() {
          
            $('.changeImage').change(function() {
                  debugger;
                var input = this;
                if (input.files) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('.change_edit').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            })
        })
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }





@model CPL_POS.Models.Product

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/Uploads/" + (Model.PhotoPath ?? "NoImage.jpg");
}

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">details of product</h3>
    </div>
    <div class="card-body btn-light">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhotoPath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhotoPath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedOn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModifiedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModifiedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SubCategory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SubCategory.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Brands)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Brands.BrandName)
            </dd>
        </dl>

        <div>
            <div class="form-group">
                <img src="@photoPath" class="change_edit" width="90" height="90" asp-append-version="true" />
            </div>
        </div>

    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-sm btn-info rounded-0">Edit</a>
 
    <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"> Back to List</a>
</div>